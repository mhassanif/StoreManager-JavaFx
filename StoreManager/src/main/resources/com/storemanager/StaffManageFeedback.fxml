<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.storemanager.controlers.StaffManageFeedbackController"
            prefWidth="1024" prefHeight="768">

    <!-- Main Content Section (now occupies full width) -->
    <center>
        <VBox fx:id="mainVBox" alignment="TOP_CENTER" spacing="20" style="-fx-padding: 20;">
            <Text text="Manage Feedback" style="-fx-font-size: 24px; -fx-font-weight: bold;" />

            <!-- Feedback List Table -->
            <TableView fx:id="feedbackTable" prefWidth="800" prefHeight="400">
                <columns>
                    <TableColumn fx:id="feedbackIdColumn" text="Feedback ID" />
                    <TableColumn fx:id="customerIdColumn" text="Customer ID" />
                    <TableColumn fx:id="commentsColumn" text="Comments" />
                </columns>
            </TableView>

            <!-- Buttons for Managing Feedback -->
            <HBox alignment="CENTER" spacing="10">
                <Button fx:id="btnApproveFeedback" text="Approve Feedback" onAction="#handleApproveFeedback" prefWidth="200"
                        style="-fx-font-size: 14px; -fx-background-color: #4CAF50; -fx-text-fill: white;" />
                <Button fx:id="btnRejectFeedback" text="Reject Feedback" onAction="#handleRejectFeedback" prefWidth="200"
                        style="-fx-font-size: 14px; -fx-background-color: #E74C3C; -fx-text-fill: white;" />
            </HBox>
        </VBox>
    </center>
</BorderPane>
