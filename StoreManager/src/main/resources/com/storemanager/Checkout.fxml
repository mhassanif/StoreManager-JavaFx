<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.storemanager.controlers.CheckoutController" prefWidth="980.0" prefHeight="620.0">
    <Label text="Checkout" style="-fx-font-size: 24px; -fx-font-weight: bold;" />

    <!-- Order Details Table -->
    <TableView fx:id="orderSummaryTable">
        <columns>
            <TableColumn fx:id="colProductName" text="Product Name" />
            <TableColumn fx:id="colQuantity" text="Quantity" />
            <TableColumn fx:id="colPrice" text="Price" />
            <TableColumn fx:id="colTotal" text="Total" />
        </columns>
    </TableView>


    <!-- Total Amount -->
    <Label fx:id="totalAmountLabel" text="Total Amount: $" style="-fx-font-size: 16px;" />

    <!-- Delivery Address -->
    <Label text="Delivery Address:" style="-fx-font-size: 14px;" />
    <TextArea fx:id="deliveryAddressField" promptText="Enter your delivery address here..." prefWidth="500" prefHeight="80" />

    <!-- Buttons -->
    <HBox spacing="20" alignment="CENTER">
        <Button text="Go Back to Cart" onAction="#goBackToCart" style="-fx-background-color: #f0ad4e; -fx-text-fill: white;" />
        <Button text="Confirm Order" onAction="#confirmOrder" style="-fx-background-color: #5cb85c; -fx-text-fill: white;" />
    </HBox>
</VBox>
