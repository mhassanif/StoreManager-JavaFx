<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.storemanager.controlers.CustomerProductsController">

    <!-- Main container -->
    <VBox spacing="10" alignment="TOP_CENTER" prefWidth="800" prefHeight="600">
        <!-- Top section with category selection -->
        <HBox spacing="10" alignment="CENTER">
            <Label text="Categories:" />
            <ComboBox fx:id="categoryComboBox" onAction="#filterByCategory" />
        </HBox>

        <!-- Product grid section -->
        <ScrollPane fitToWidth="true" fitToHeight="true" vbarPolicy="ALWAYS" hbarPolicy="NEVER">
            <TilePane fx:id="productGrid" hgap="10" vgap="10" prefColumns="3" alignment="CENTER">
                <!-- Product items will be dynamically added here -->
            </TilePane>
        </ScrollPane>

        <!-- Bottom section for total amount -->
        <HBox spacing="10" alignment="CENTER_RIGHT" prefHeight="50">
            <Label fx:id="totalAmountLabel" text="Total Amount: $0.00" style="-fx-font-size: 14px; -fx-font-weight: bold;" />
        </HBox>
    </VBox>
</AnchorPane>
