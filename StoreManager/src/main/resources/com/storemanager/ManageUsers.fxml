<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.storemanager.controlers.ManageUsersController"
            prefHeight="620.0" prefWidth="989.0" style="-fx-background-color: #ECF0F1;">

    <!-- Main Content Area (Manage Users) -->
    <center>
        <!-- VBox for vertical alignment -->
        <VBox alignment="TOP_CENTER" spacing="20" style="-fx-padding: 20;">
            <!-- Title -->
            <Text text="Manage Users" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #34495E;"/>

            <!-- Search Field -->
            <TextField fx:id="searchField" promptText="Search Users" onAction="#handleSearch" prefWidth="300"/>

            <!-- Table View for Users -->
            <TableView fx:id="userTable" prefHeight="400" prefWidth="600" style="-fx-background-color: #ffffff;">
                <!-- Columns for Name, Email, Role, and Actions -->
                <columns>
                    <TableColumn fx:id="nameColumn" text="Name" prefWidth="150" />
                    <TableColumn fx:id="emailColumn" text="Email" prefWidth="200" />
                    <TableColumn fx:id="roleColumn" text="Role" prefWidth="100" />
                    <TableColumn fx:id="actionColumn" text="Actions" prefWidth="150" />
                </columns>
            </TableView>
        </VBox>
    </center>
</BorderPane>
