<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane fx:id="apMother" prefWidth="980.0" prefHeight="620.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.storemanager.controlers.LoginController" stylesheets="@style.css">
    <children>
        <VBox alignment="CENTER" spacing="20.0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0" styleClass="login-container">
            <!-- Title -->
            <Text text="Login to TradeTrack" styleClass="text-header" />

            <!-- Username Field -->
            <TextField fx:id="usernameField" promptText="Username" styleClass="input-field" />

            <!-- Password Field -->
            <PasswordField fx:id="passwordField" promptText="Password" styleClass="input-field" />

            <!-- Login Button -->
            <Button fx:id="btnLogin" text="Log In" onAction="#login" styleClass="login-button" />

            <!-- Message Label -->
            <Label fx:id="messageLabel" text="" styleClass="error-message" />

            <!-- Hyperlinks -->
            <HBox alignment="CENTER" spacing="10" styleClass="hyperlinks">
                <Hyperlink fx:id="hlCreateAccount" text="Create an Account" onAction="#hlCreateAnAccount" styleClass="link" />
            </HBox>
        </VBox>
    </children>
</AnchorPane>
