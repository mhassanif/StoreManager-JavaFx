<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane fx:id="apMother" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.storemanager.LoginController" style="-fx-background-color: #f5f5f5;">
    <children>
        <VBox alignment="CENTER" spacing="15.0" prefWidth="400.0" AnchorPane.leftAnchor="100.0" AnchorPane.rightAnchor="100.0" AnchorPane.topAnchor="50.0" AnchorPane.bottomAnchor="50.0">
            <!-- Title -->
            <Label text="Login to TradeTrack" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />

            <!-- Username Field -->
            <TextField fx:id="usernameField" promptText="Username" style="-fx-font-size: 14px; -fx-background-color: #ffffff; -fx-border-color: #cccccc; -fx-border-radius: 5px; -fx-background-radius: 5px; -fx-padding: 10px;" />

            <!-- Password Field -->
            <PasswordField fx:id="passwordField" promptText="Password" style="-fx-font-size: 14px; -fx-background-color: #ffffff; -fx-border-color: #cccccc; -fx-border-radius: 5px; -fx-background-radius: 5px; -fx-padding: 10px;" />

            <!-- Login Button -->
            <Button fx:id="btnLogin" text="Log In" onAction="#handleLogin" style="-fx-font-size: 16px; -fx-background-color: #0078d4; -fx-text-fill: #ffffff; -fx-border-radius: 5px; -fx-background-radius: 5px; -fx-padding: 10px;" />

            <!-- Message Label -->
            <Label fx:id="messageLabel" text="" style="-fx-font-size: 14px; -fx-text-fill: #ff0000;" />

            <!-- Hyperlinks -->
            <HBox alignment="CENTER" spacing="10">
                <Hyperlink fx:id="hlCreateAccount" text="Create an Account" onAction="#hlCreateAnAccount" style="-fx-text-fill: #0078d4; -fx-font-size: 12px;" />
                <Hyperlink fx:id="hlDatabase" text="Database Setup" onAction="#hlDbOnAction" style="-fx-text-fill: #0078d4; -fx-font-size: 12px;" />
            </HBox>
        </VBox>
    </children>
</AnchorPane>
