<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.storemanager.controlers.CreateProductController" alignment="CENTER" spacing="20" style="-fx-padding: 20;">
    <!-- Title -->
    <Label text="Add New Product" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2C3E50;" />

    <!-- Form -->
    <GridPane hgap="10" vgap="10" style="-fx-padding: 10;" alignment="CENTER">
        <!-- Product Name -->
        <Label text="Product Name:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <TextField fx:id="productNameField" promptText="Enter product name" GridPane.columnIndex="1" GridPane.rowIndex="0" />

        <!-- Price -->
        <Label text="Price:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <TextField fx:id="priceField" promptText="Enter price" GridPane.columnIndex="1" GridPane.rowIndex="1" />

        <!-- Brand -->
        <Label text="Brand:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <TextField fx:id="brandField" promptText="Enter brand" GridPane.columnIndex="1" GridPane.rowIndex="2" />

        <!-- Category -->
        <Label text="Category:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
        <ComboBox fx:id="categoryComboBox" promptText="Select category" GridPane.columnIndex="1" GridPane.rowIndex="3" />

        <!-- Description -->
        <Label text="Description:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
        <TextArea fx:id="descriptionArea" promptText="Enter product description" GridPane.columnIndex="1" GridPane.rowIndex="4" prefRowCount="3" />

        <!-- Image URL -->
        <Label text="Image URL:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
        <TextField fx:id="imageUrlField" promptText="Enter image URL" GridPane.columnIndex="1" GridPane.rowIndex="5" />
    </GridPane>

    <!-- Buttons -->
    <HBox spacing="10" alignment="CENTER">
        <Button text="Save" fx:id="btnSave" onAction="#handleSaveProduct" style="-fx-background-color: #2ECC71; -fx-text-fill: white;" />
        <Button text="Cancel" fx:id="btnCancel" onAction="#handleCancel" style="-fx-background-color: #E74C3C; -fx-text-fill: white;" />
    </HBox>
</VBox>
