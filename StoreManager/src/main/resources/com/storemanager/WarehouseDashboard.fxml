<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.storemanager.controlers.WarehouseDashboardController" prefWidth="980.0" prefHeight="620.0">

    <!-- Top Bar -->
    <top>
        <HBox alignment="TOP_RIGHT" styleClass="top-bar">
            <Button text="Sign Out" onAction="#handleSignOut" styleClass="button-sign-out" />
        </HBox>
    </top>

    <!-- Left Sidebar -->
    <left>
        <VBox spacing="15" alignment="TOP_LEFT" styleClass="side-bar">
            <Label text="Warehouse Staff" styleClass="label-sidebar-title" />
            <Button text="Inventory" onAction="#showInventory" styleClass="button-sidebar" />
            <Button text="Notifications" onAction="#showNotifications" styleClass="button-sidebar" />
            <Button text="Profile" onAction="#showProfile" styleClass="button-sidebar" />
        </VBox>
    </left>

    <!-- Dynamic Content Area -->
    <center>
        <StackPane fx:id="contentArea" styleClass="content-area">
            <Label text="Welcome, Warehouse Staff!" styleClass="label-welcome" />
        </StackPane>
    </center>
</BorderPane>
