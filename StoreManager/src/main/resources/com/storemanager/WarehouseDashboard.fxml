<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.storemanager.controlers.WarehouseDashboardController"
            prefWidth="980.0" prefHeight="620.0" style="-fx-background-color: #ECF0F1;">

    <!-- Top Bar -->
    <top>
        <HBox alignment="TOP_RIGHT" style="-fx-background-color: #2C3E50; -fx-padding: 10;">
            <Button text="Sign Out" onAction="#handleSignOut"
                    style="-fx-font-size: 14px; -fx-background-color: #E74C3C; -fx-text-fill: white; -fx-background-radius: 5;" />
        </HBox>
    </top>

    <!-- Left Sidebar -->
    <left>
        <VBox spacing="15" alignment="TOP_CENTER" style="-fx-background-color: #2C3E50; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.5), 10, 0.5, 2, 2);">
            <Label text="Warehouse Staff" style="-fx-text-fill: #FFFFFF; -fx-font-size: 20px; -fx-font-weight: bold;" />
            <Separator style="-fx-background-color: white;" />
            <Button text="Inventory" onAction="#showInventory" prefWidth="200"
                    style="-fx-text-fill: white; -fx-font-size: 14px; -fx-background-color: #34495E; -fx-background-radius: 5;" />
            <Button text="Notifications" onAction="#showNotifications" prefWidth="200"
                    style="-fx-text-fill: white; -fx-font-size: 14px; -fx-background-color: #34495E; -fx-background-radius: 5;" />
            <Button text="Profile" onAction="#showProfile" prefWidth="200"
                    style="-fx-text-fill: white; -fx-font-size: 14px; -fx-background-color: #34495E; -fx-background-radius: 5;" />
        </VBox>
    </left>

    <!-- Dynamic Content Area -->
    <center>
        <StackPane fx:id="contentArea" style="-fx-background-color: #F7F9F9; -fx-border-color: #D5D8DC; -fx-border-width: 2; -fx-border-radius: 10; -fx-background-radius: 10;">
            <Label text="Welcome, Warehouse Staff!" style="-fx-font-size: 16px; -fx-text-fill: #2C3E50;" />
        </StackPane>
    </center>
</BorderPane>