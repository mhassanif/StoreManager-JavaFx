<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.storemanager.controlers.ManageProductsController"
            prefHeight="620.0" prefWidth="989.0" style="-fx-background-color: #ECF0F1;">

    <!-- Left Sidebar -->
    <left>
        <VBox alignment="TOP_CENTER" spacing="15" style="-fx-background-color: #2C3E50; -fx-padding: 20;">
            <!-- Logo or Title (you can modify as needed) -->
            <Label text="Admin Panel" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #FFFFFF;" />
            <Separator style="-fx-background-color: white;" />

            <!-- Navigation Buttons -->
            <Button text="Dashboard" fx:id="btnDashboard" onAction="#handleDashboard" prefWidth="200"
                    style="-fx-text-fill: white; -fx-font-size: 14px; -fx-background-color: #34495E;" />
            <Button text="Manage Users" fx:id="btnManageUsers" onAction="#handleManageUsers" prefWidth="200"
                    style="-fx-text-fill: white; -fx-font-size: 14px; -fx-background-color: #34495E;" />
            <Button text="Manage Orders" fx:id="btnManageOrders" onAction="#handleManageOrders" prefWidth="200"
                    style="-fx-text-fill: white; -fx-font-size: 14px; -fx-background-color: #34495E;" />
            <Button text="Manage Products" fx:id="btnManageProducts" onAction="#handleManageProducts" prefWidth="200"
                    style="-fx-text-fill: white; -fx-font-size: 14px; -fx-background-color: #34495E;" />
            <Button text="Manage Notifications" fx:id="btnManageNotifications" onAction="#handleManageNotifications" prefWidth="200"
                    style="-fx-text-fill: white; -fx-font-size: 14px; -fx-background-color: #34495E;" />
            <Button text="Manage Feedback" fx:id="btnManageFeedback" onAction="#handleManageFeedback" prefWidth="200"
                    style="-fx-text-fill: white; -fx-font-size: 14px; -fx-background-color: #34495E;" />

            <!-- Logout Button -->
            <Button text="Logout" fx:id="btnLogout" onAction="#handleLogout" prefWidth="200"
                    style="-fx-text-fill: white; -fx-font-size: 14px; -fx-background-color: #E74C3C;" />
        </VBox>
    </left>

    <!-- Main Content Area (Right Side) -->
    <center>
        <VBox fx:id="contentArea" alignment="CENTER" spacing="20" style="-fx-padding: 20; -fx-background-color: #FFFFFF;">
            <Label text="Manage Products" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2C3E50;" />

            <!-- Search and Filter Section -->
            <HBox spacing="10">
                <TextField fx:id="searchField" promptText="Search by product name" onKeyReleased="#handleSearch" />
                <ComboBox fx:id="brandFilter" promptText="Filter by brand" onAction="#handleFilterBrand">
                    <items>
                        <!-- Add available brand names here -->
                    </items>
                </ComboBox>
                <Button text="Add Product" onAction="#handleAddProduct" />
            </HBox>

            <!-- Table for Displaying Products -->
            <TableView fx:id="productsTable" prefWidth="600" prefHeight="400">
                <columns>
                    <TableColumn fx:id="productIdColumn" text="Product ID" prefWidth="100" />
                    <TableColumn fx:id="productNameColumn" text="Product Name" prefWidth="200" />
                    <TableColumn fx:id="brandColumn" text="Brand" prefWidth="150" />
                    <TableColumn fx:id="priceColumn" text="Price" prefWidth="100" />
                    <TableColumn fx:id="stockLevelColumn" text="Stock Level" prefWidth="100" />
                    <TableColumn fx:id="restockLevelColumn" text="Restock Level" prefWidth="100" />
                </columns>
            </TableView>

            <!-- Buttons for Product Management -->
            <HBox spacing="10" alignment="CENTER">
                <Button text="Delete Product" onAction="#handleDeleteProduct" />
                <Button text="Set Restock Level" onAction="#handleSetRestockLevel" />
            </HBox>
        </VBox>
    </center>
</BorderPane>
