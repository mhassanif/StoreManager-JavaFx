<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" spacing="15" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.storemanager.controlers.CategoriesController">
    <!-- Title -->
    <Label text="Product Categories" style="-fx-font-size: 24px; -fx-font-weight: bold;" />

    <!-- Category Selector -->
    <HBox spacing="10">
        <Label text="Select Category:" style="-fx-font-size: 16px;" />
        <ComboBox fx:id="categoryComboBox" onAction="#loadProducts" />
    </HBox>

    <!-- Product List Table -->
    <TableView fx:id="productTable" prefWidth="750.0">
        <columns>
            <TableColumn fx:id="colProductName" text="Product Name" prefWidth="200.0" />
            <TableColumn fx:id="colBrand" text="Brand" prefWidth="100.0" />
            <TableColumn fx:id="colPrice" text="Price" prefWidth="100.0" />
            <TableColumn fx:id="colActions" text="Actions" prefWidth="200.0" />
        </columns>
    </TableView>

    <!-- Action Buttons -->
    <HBox spacing="20" alignment="CENTER">
        <Button text="Back to Dashboard" onAction="#goToDashboard" style="-fx-background-color: #5cb85c; -fx-text-fill: white;" />
    </HBox>
</VBox>
