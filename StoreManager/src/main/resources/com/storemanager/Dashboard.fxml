<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.storemanager.controlers.DashboardController" prefWidth="980.0" prefHeight="620.0">
    <!-- Left Sidebar -->
    <left>
        <VBox spacing="15" alignment="TOP_LEFT" style="-fx-background-color: #2A2A2A; -fx-padding: 15;">
            <Label text="Dashboard" style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;" />
            <Button text="Products" fx:id="productsButton" onAction="#showProducts" />
            <Button text="Cart" fx:id="cartButton" onAction="#showCart" />
            <Button text="Orders" fx:id="ordersButton" onAction="#showOrders" />
            <Button text="Notifications" fx:id="notificationsButton" onAction="#showNotifications" />
            <Button text="Profile" fx:id="profileButton" onAction="#showProfile" />
        </VBox>
    </left>

    <!-- Dynamic Content Area -->
    <center>
        <StackPane fx:id="contentArea" style="-fx-background-color: #FFFFFF;">
            <Label text="Welcome to the Dashboard!" style="-fx-font-size: 16px; -fx-text-fill: black;" />
        </StackPane>
    </center>
</BorderPane>
